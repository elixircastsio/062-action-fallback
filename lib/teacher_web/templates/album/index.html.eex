<h2>Vinyl Record Store</h2>

<table class="table">
  <thead>
    <tr>
      <th>Artist</th>
      <th>Title</th>
      <th>Summary</th>
      <th>View</th>
    </tr>
  </thead>
  <tbody>
  <%= for album <- @albums do %>
      <tr>
        <td><%= album.artist %></td>
        <td><%= album.title %></td>
        <td><%= album.summary %></td>
        <td><%= link( "View", to: album_path(@conn, :show, album)) %></td>
      </tr>
  <% end %>
  </tbody>
</table>
